    <build>
        <testResources>
            <testResource>
                <directory>src/test/resources/features/profileLite</directory>
                <includes>
                    <include>**/*.feature</include>
                </includes>
            </testResource>
        </testResources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.2.2</version>
                <configuration>
                    <testFailureIgnore>true</testFailureIgnore>
                    <parallel>methods</parallel>
                    <useUnlimitedThreads>false</useUnlimitedThreads>
                    <threadCount>${cucumber.parallel.threads}</threadCount>
                    <perCoreThreadCount>false</perCoreThreadCount>
                    <forkCount>1</forkCount>
                    <reuseForks>true</reuseForks>
                    <rerunFailingTestsCount>1</rerunFailingTestsCount>

                    <argLine>
                        -Xms1024m
                        -XX:MaxMetaspaceSize=256m
                        -Xms512m
                    </argLine>

                    <includes>
                        <include>**/ParallelTestRunner.java</include>
                    </includes>

                    <redirectTestOutputToFile>false</redirectTestOutputToFile>
                    <systemPropertyVariables>
                        <rerun.delay>72000</rerun.delay>
                        <logback.configurationFile>${logback.configurationFile}</logback.configurationFile>
                    </systemPropertyVariables>
                    <argLine>
                        -Dlogback.configurationFile=${logback.configurationFile}
                    </argLine>
                    <properties>
                        <configurationParameters>
                            cucumber.junit-platform.naming-strategy=long
                            cucumber.execution.parallel.enabled=${cucumber.parallel.enabled}
                            cucumber.execution.parallel.config.strategy=fixed
                            cucumber.execution.parallel.config.fixed.parallelism=${cucumber.parallel.threads}
                            cucumber.filter.tags=${cucumber.filter.tags}
                            cucumber.plugin=pretty,\
                            html:target/cucumber-reports/cucumber-rerun.html,\
                            json:target/cucumber-reports/cucumber-rerun.json,\
                            rerun:target/rerun.txt
                        </configurationParameters>
                    </properties>
                </configuration>
            </plugin>
            <plugin>
                <groupId>net.masterthought</groupId>
                <artifactId>maven-cucumber-reporting</artifactId>
                <version>5.7.5</version>
                <executions>
                    <execution>
                        <id>execution</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <projectName>AIR4 - Loyalty</projectName>
                            <skip>false</skip>
                            <outputDirectory>target/cucumber-reports</outputDirectory>
                            <inputDirectory>target/cucumber-reports</inputDirectory>
                            <jsonFiles>
                                <param>**/*.json</param>
                            </jsonFiles>
                            <mergeFeaturesById>true</mergeFeaturesById>
                            <mergeFeaturesWithRetest>true</mergeFeaturesWithRetest>
                            <checkBuildResult>false</checkBuildResult>
                            <skipEmptyJSONFiles>true</skipEmptyJSONFiles>
                            <classifications>
                                <Platform>Windows</Platform>
                                <Environment>QA</Environment>
                            </classifications>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>3.2.0</version>
                <executions>
                    <execution>
                        <id>clean-target</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>${project.build.directory}</directory>
                                    <includes>
                                        <include>**/*</include>
                                    </includes>
                                </fileset>
                            </filesets>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <!--backup reports before clean-->
                    <execution>
                        <id>backup-before-clean</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <echo message="Backing up reports before clean"/>
                                <mkdir dir="${project.build.directory}/backup-reports"/>
                                <copy todir="${project.build.directory}/backup-reports" overwrite="true" failonerror="false">
                                    <fileset dir="${project.build.directory}/cucumber-reports" erroronmissingdir="false">
                                        <include name="**/*.json"/>
                                        <include name="**/*.html"/>
                                    </fileset>
                                </copy>
                                <echo message="Deleting log files"/>
                                <delete dir="${project.basedir}/logs"/>
                                <mkdir dir="${project.basedir}/logs"/>
                            </target>
                        </configuration>
                    </execution>

                    <!--backup after each test run-->
                    <execution>
                        <id>backup-after-test</id>
                        <phase>test</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <echo message="Backing up reports after test"/>
                                <mkdir dir="${project.build.directory}/backup-reports"/>
                                <copy todir="${project.build.directory}/backup-reports" overwrite="false" failonerror="false">
                                    <fileset dir="${project.build.directory}/cucumber-reports" erroronmissingdir="false">
                                        <include name="**/*.json"/>
                                        <include name="**/*.html"/>
                                    </fileset>
                                </copy>
                            </target>
                        </configuration>
                    </execution>

                    <!-- copy back reports before next run-->
                    <execution>
                        <id>restore-before-next-run</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <echo message="Restoring reports before next run"/>
                                <mkdir dir="${project.build.directory}/cucumber-reports"/>
                                <copy todir="${project.build.directory}/cucumber-reports" overwrite="false" failonerror="false">
                                    <fileset dir="${project.build.directory}/backup-reports" erroronmissingdir="false">
                                        <include name="**/*.json"/>
                                        <include name="**/*.html"/>
                                    </fileset>
                                </copy>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>miles</id>
            <properties>
                    <cucumber.parallel.threads>5</cucumber.parallel.threads>
                    <cucumber.filter.tags>@miles</cucumber.filter.tags>
            </properties>
        </profile>

        <profile>
            <id>profiles</id>
            <properties>
                <cucumber.parallel.threads>2</cucumber.parallel.threads>
                <cucumber.filter.tags>@profiles</cucumber.filter.tags>
            </properties>
        </profile>

        <profile>
            <id>regression</id>
            <properties>
                <cucumber.parallel.threads>18</cucumber.parallel.threads>
                <cucumber.filter.tags>@regression</cucumber.filter.tags>
            </properties>
        </profile>
    </profiles>
</project>