    <modelVersion>4.0.0</modelVersion>

    <groupId>org.example</groupId>
    <artifactId>MyApiMultiThreadedProject</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <java.version>11</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <cucumber.version>7.14.0</cucumber.version>
        <rest-assured.version>5.3.2</rest-assured.version>
        <junit.version>4.13.2</junit.version>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <thread.count>10</thread.count>
        <cucumber.parallel.enabled>true</cucumber.parallel.enabled>
        <cucumber.parallel.threads>1</cucumber.parallel.threads>
        <cucumber.filter.tags>@regression</cucumber.filter.tags>
        <maven.build.timestamp.format>yyyMMdd-HHmmss</maven.build.timestamp.format>
        <cucumber.report.json.filename>cucumber-${maven.build.timestamp}</cucumber.report.json.filename>
        <rerunFailingTestsCount>1</rerunFailingTestsCount>
        <logback.configurationFile>src/test/resources/logback-test.xml</logback.configurationFile>
    </properties>

